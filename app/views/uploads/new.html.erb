<section class="add-private-key">
  <p class="form-description">Paste your private key below. It will be held in local storage only, not sent to the server.</p>
  <form action="#" id="private-key">
    <textarea id="private-key-text"></textarea>
    <input type="submit">
  </form>
</section>

<section class="post-message">
  <p class="form-description">Upload your content below. It will be signed with your private key.</p>
  <%= form_for @upload do |form| %>
    <%= form.file_field :document %>
    <%= form.submit 'Upload' %>
  <% end %>
</section>

<ol class="messages">
  <% @uploads.each do |upload| %>
    <li class="message">
      <div class="message-body"><img src="<%= upload.document %>" data-sha="<%= upload.sha256 %>"></div>
      <section class="metadata">
        <span><a href="#">Name of uploader</a> on date</span>
      </section>
    </li>
  <% end %>
</ol>
