<section class="post-message">
  <form action="#" id="private-key">
    <textarea id="private-key-text"></textarea>
    <input type="submit" id="submit-private-key" value="Submit">
  </form>

  <form action="#" id="public-key">
    <textarea id="public-key-text"></textarea>
    <input type="submit" id="submit-public-key" value="Submit">
  </form>
</section>

<section class="post-message">
  <%= form_for @upload do |form| %>
    <%= form.file_field :document %>
    <input type="hidden" id="signed_file">
    <input type="hidden" id="public_key">
    <%= form.submit 'Upload' %>
  <% end %>
</section>

<ol class="messages">
  <% @uploads.each do |upload| %>
    <li class="message">
    <div class="message-body"><img src="<%= upload.document %>" data-sha="<%= upload.sha256 %>" data-keyid="<%= upload.keyid %>"></div>
      <section class="metadata">
        <span><a href="#">Name of uploader</a> on date</span>
      </section>
    </li>
  <% end %>
</ol>
